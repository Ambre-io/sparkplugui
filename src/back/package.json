{
    "name": "SparkplugUI back",
    "version": "1.0.0",
    "license": "GNU",
    "description": "Backend for SparkplugUI",
    "author": "guiklimek",
    "scripts": {
        "compile": "tsc",
        "develop": "nodemon --watch src -e js,ts,json --exec \"ts-node src/index.ts\"",
        "build": "tsup src/index.ts --format cjs --clean",
        "start": "npm run compile && node ./dist/index.js",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@apollo/server": "^4.9.1",
        "async-mqtt": "^2.6.3",
        "graphql": "^16.7.1",
        "mongodb": "^5.7.0",
        "sparkplug-payload": "^1.0.2"
    },
    "devDependencies": {
        "@types/node": "^20.4.8",
        "nodemon": "^3.0.1",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "tsup": "^7.2.0",
        "typescript": "^5.1.6"
    }
}
