{
    "name": "sparkplugui-simulator",
    "version": "1.0.0",
    "license": "GNU",
    "description": "SparkplugUI Simulator",
    "author": "guiklimek",
    "scripts": {
        "compile": "tsc",
        "develop": "nodemon --watch src -e js,ts,json --exec \"ts-node src/index.ts\"",
        "build": "tsup src/index.ts --format cjs --clean",
        "start": "npm run compile && node ./dist/index.js",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "mqtt": "^5.0.5",
        "sparkplug-payload": "^1.0.3"
    },
    "devDependencies": {
        "@types/node": "^18.18.0",
        "nodemon": "^3.0.1",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "tsup": "^7.2.0",
        "typescript": "^5.1.6"
    }
}
